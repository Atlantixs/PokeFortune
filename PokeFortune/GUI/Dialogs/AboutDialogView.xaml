<UserControl x:Class="PokeFortune.GUI.Dialogs.AboutDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PokeFortune.GUI.Dialogs"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:resx="clr-namespace:PokeFortune.Core.Properties;assembly=PokeFortune.Core"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d">

	<prism:Dialog.WindowStyle>
		<Style BasedOn="{StaticResource MaterialWindowDesign}" TargetType="Window">
			<Setter Property="ResizeMode" Value="NoResize" />
			<Setter Property="ShowInTaskbar" Value="False" />
			<Setter Property="SizeToContent" Value="WidthAndHeight" />
		</Style>
	</prism:Dialog.WindowStyle>

	<StackPanel Margin="10" Orientation="Vertical">
		<TextBlock Text="{Binding AboutPokeFortune}" />
		<TextBlock />
		<TextBlock Text="{Binding CopyrightPokemon}" />
	</StackPanel>
</UserControl>
