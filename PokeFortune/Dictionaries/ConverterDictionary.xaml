<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:conv="clr-namespace:PokeFortune.Converters"
                    xmlns:local="clr-namespace:PokeFortune.Dictionaries">

	<conv:PokemonTypeToColorConverter x:Key="PokemonTypeToColorConverter" />
	<conv:PokemonTypeToBackgroundColorConverter x:Key="PokemonTypeToBackgroundColorConverter" />

	<conv:BoolToVisConverter x:Key="BoolToVisCollapsedConverter"
	                         Collapsed="True"
	                         Reverse="False" />

	<conv:BoolToVisConverter x:Key="BoolToVisCollapsedReverseConverter"
	                         Collapsed="True"
	                         Reverse="True" />

	<conv:BoolToVisConverter x:Key="BoolToVisHiddenConverter"
	                         Collapsed="False"
	                         Reverse="False" />

	<conv:BoolToVisConverter x:Key="BoolToVisHiddenReverseConverter"
	                         Collapsed="False"
	                         Reverse="True" />

</ResourceDictionary>